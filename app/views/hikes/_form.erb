    <br>
    <%= f.label :summary %>
    <%= f.text_field :summary, class: "form-control", required: "required" %>
    <br>
    <br>
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control", required: "required" %>
    <br>
    <%= f.label :length %>
    <%= f.text_field :length, class: "form-control", required: "required" %>
